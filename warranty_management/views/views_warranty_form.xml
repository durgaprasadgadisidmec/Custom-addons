<odoo>
    <data>
        <record id="view_warranty_form" model="ir.ui.view">
            <field name="name">Warranty</field>
            <field name="model">warranty.menu</field>
            <field name="arch" type="xml">
                <form string="Warrantry" create="0" delete="0" edit="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="wh_doucment"/>
                                <field name="customer_name"/>
                                <field name="phone"/>
                            </group>
                            <group>
                                <field name="delivery_date"/>
                                <field name="source_document"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Product Warrantry Details">
                                <field name="warranty_line_ids">
                                    <list editable="bottom">
                                        <field name="product_name"/>
                                        <field name="quantity"/>
                                        <field name="serial_number"/>
                                    </list>
                                    <form>
                                        <field name="product_name"/>
                                        <field name="quantity"/>
                                        <field name="serial_number"/>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_warranty_menu_search" model="ir.ui.view">
            <field name="name">warranty search</field>
            <field name="model">warranty.menu</field>
            <field name="arch" type="xml">
                <search string="Search Warranty Records">
                    <filter name="customer_name"/>
                    <filter name="phone"/>
                    <filter name="source_document"/>
                    <filter name="serial_number"/>
                    <filter name="wh_doucment"/>

                    <field name="product_name"/>
                    <field name="phone"/>
                    <field name="customer_name"/>
                    <field name="serial_number"/>
                    <field name="source_document"/>
                    <field name="wh_doucment"/>
                </search>
            </field>
        </record>

        <record id="view_warranty_details" model="ir.ui.view">
            <field name="name">Warranty</field>
            <field name="model">warranty.menu</field>
            <field name="arch" type="xml">
                <list string="Warrantry" create="0"  edit="0" >
                    <field name="product_name"/>
                    <field name="serial_number"/>
                    <field name="wh_doucment"/>
                    <field name="source_document"/>
                    <field name="delivery_date"/>
                    <field name="customer_name"/>
                    <field name="phone"/>
                    <field name="warranty_period"/>
                    <field name="warranty_remaining"/>
                    <field name="status"/>
                </list>
            </field>
        </record>

        <record id="action_warranty_details" model="ir.actions.act_window">
            <field name="name">Warranty</field>
            <field name="res_model">warranty.menu</field>
            <field name="view_mode">list,search</field>
            <field name="search_view_id" ref="warranty_management.view_warranty_menu_search"/>
        </record>
    </data>
</odoo>
