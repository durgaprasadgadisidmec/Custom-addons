<odoo>
  <!--  Add customer name,Phone number and Delivery fields -->
  <record id="view_picking_form_inherit_custom" model="ir.ui.view">
    <field name="name">stock.picking.form.inherit.customer</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form" />
    <field name="arch" type="xml">
        <xpath expr="//field[@name='picking_type_id']" position="after">
            <field name="customers_name" />
            <field name="phone"/>
        </xpath>
        <xpath expr="//field[@name='origin']" position="after">
            <field name="delivery_date"/>
        </xpath>
    </field>
  </record>


  <!-- Second Inherited View: Add Product Details In Operation Fiels.Lines -->
  <record id="view_picking_form_inherit_operations" model="ir.ui.view">
    <field name="name">stock.picking.form.inherit.operations</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
        <xpath expr="//page[@name='operations']//field[@name='move_ids_without_package']//field[@name='product_id']" position="after">
            <field name="serial_number" widget="many2many_tags"/>
            <field name="wh_doucment"/>
            <field name="source_document"/>
            <field name="delivery_date"/>
            <field name="customer_name"/>
            <field name="phone"/>
            <field name="warranty_period"/>
            <field name="warranty_remaining"/>
            <field name="status" readonly="1"/>
        </xpath>
    </field>
  </record>
</odoo>
