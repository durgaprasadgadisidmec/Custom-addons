<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record id="product_template_lens_form_view" model="ir.ui.view">
  <field name="name">product.template.lens.form</field>
  <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>

  <field name="arch" type="xml">
      <!-- your frame fields -->
         <xpath expr="//notebook/page[@name='purchase']" position="after">
             <notebook>

        <page name="lens" string="Attributes and Variants" >
        <group>
            <field name="material"/>
            <field name="lens_types"/>
            <field name="lens_style"/>
        </group>
      </page>
             </notebook>

            </xpath>
  </field>
</record>

<record id="action_product_lens" model="ir.actions.act_window">
  <field name="name">lens</field>
  <field name="res_model">product.template</field>
  <field name="view_mode">form</field>
  <field name="view_id" ref="product_template_lens_form_view"/>
</record>
</odoo>


